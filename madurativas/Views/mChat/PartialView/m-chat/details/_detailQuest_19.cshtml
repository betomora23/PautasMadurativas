        function validaResultado() {

            if ($("#dt19_quest_1_option1").parent().hasClass("Activo")) {
                Resultado("Pasa");
            } else if ($("#dt19_quest_1_option3").parent().hasClass("Activo") || $("#dt19_quest_1_option2").parent().hasClass("Activo")) {

