<script>


('@Model.mchat_monitor_quest_2.quest1' == "True") ? $("#dt2_quest_1_option1").prop("checked", true) : ('@Model.mchat_monitor_quest_2.quest1' == "False") ? $("#dt2_quest_1_option3").prop("checked", true) : $("#dt2_quest_1_option2").prop("checked", true);
    if ($("#dt2_quest_1_option1").is(':checked')) {
        $("#dt2_quest_1_option1").parent().addClass("Activo");
        $("#dt2_quest_1_option2").parent().removeClass("Activo");
        $("#dt2_quest_1_option3").parent().removeClass("Activo");
    } else if ($("#dt2_quest_1_option3").is(':checked')) {
        $("#dt2_quest_1_option1").parent().removeClass("Activo");
        $("#dt2_quest_1_option2").parent().removeClass("Activo");
        $("#dt2_quest_1_option3").parent().addClass("Activo");
};
('@Model.mchat_monitor_quest_2.quest2' == "True") ? $("#dt2_quest_2_option1").prop("checked", true) : ('@Model.mchat_monitor_quest_2.quest2' == "False") ? $("#dt2_quest_2_option3").prop("checked", true) : $("#dt2_quest_2_option2").prop("checked", true);
    if ($("#dt2_quest_2_option1").is(':checked')) {
        $("#dt2_quest_2_option1").parent().addClass("Activo");
        $("#dt2_quest_2_option2").parent().removeClass("Activo");
        $("#dt2_quest_2_option3").parent().removeClass("Activo");
    } else if ($("#dt2_quest_2_option3").is(':checked')) {
        $("#dt2_quest_2_option1").parent().removeClass("Activo");
        $("#dt2_quest_2_option2").parent().removeClass("Activo");
        $("#dt2_quest_2_option3").parent().addClass("Activo");
};
('@Model.mchat_monitor_quest_2.quest3' == "True") ? $("#dt2_quest_3_option1").prop("checked", true) : ('@Model.mchat_monitor_quest_2.quest3' == "False") ? $("#dt2_quest_3_option3").prop("checked", true) : $("#dt2_quest_3_option2").prop("checked", true);
    if ($("#dt2_quest_3_option1").is(':checked')) {
        $("#dt2_quest_3_option1").parent().addClass("Activo");
        $("#dt2_quest_3_option2").parent().removeClass("Activo");
        $("#dt2_quest_3_option3").parent().removeClass("Activo");
        document.getElementById("exam1").style.display = "block";
        document.getElementById("exam2").style.display = "block";
    } else if ($("#dt2_quest_3_option3").is(':checked')) {
        $("#dt2_quest_3_option1").parent().removeClass("Activo");
        $("#dt2_quest_3_option2").parent().removeClass("Activo");
        $("#dt2_quest_3_option3").parent().addClass("Activo");
        document.getElementById("exam1").style.display = "none";
        document.getElementById("exam2").style.display = "none";
};

    var $dt2_quest1 = $('#FrmQuest2 #dt2_quest_1');
    var $dt2_quest2 = $('#FrmQuest2 #dt2_quest_2');
    var $dt2_quest3 = $('#FrmQuest2 #dt2_quest_3');
    var $dt2_quest4 = $('#FrmQuest2 #dt2_quest_4');

    var $dt2_Resultado = $('#dt2lblResultado');
       

    $(function () {

        @{
            var _txtaudicion = string.Empty;

            if (Model.estudio.mchat?.mchat_monitor_quest_2.quest4 != null) {
                _txtaudicion = Model.estudio.mchat?.mchat_monitor_quest_2.quest4.Trim();
            }
        }
        $dt2_quest4.val('@_txtaudicion');

        if (q2cuentaPasa() < 2) {
            resultado("Falla");

        } else {
            resultado("Pasa");
        }

        $("#bodyDetailQuest2").click(function () {

            if ($("#dt2_quest_3_option1").parent().hasClass("Activo")) {                
               document.getElementById("exam1").style.display = "block";
               document.getElementById("exam2").style.display = "block";
            } else if ($("#dt2_quest_3_option3").parent().hasClass("Activo") || $("#dt2_quest_3_option2").parent().hasClass("Activo")) {
                document.getElementById("exam1").style.display = "none";
                document.getElementById("exam2").style.display = "none";
            }

            if (q2cuentaPasa() < 2) {
                resultado("Falla");

            } else {
                resultado("Pasa");
               

            }

        });


        function resultado(valor) {
            $dt2_Resultado.empty();
            $dt2_Resultado.append(valor);
        }

        function q2cuentaPasa() {
            var nPasa = 0;
            if ($("#dt2_quest_1_option3").parent().hasClass("Activo")) nPasa++;
            if ($("#dt2_quest_2_option3").parent().hasClass("Activo")) nPasa++;
            //if ($("#dt2_quest_3_option3").parent().hasClass("Activo")) nPasa++;
            //if (!$dt2_quest2.is(':checked')) nPasa++;
            //if ($dt2_quest3.is(':checked')) nPasa++;

            
            return nPasa;

        }

        $('#btndtq2Save').click(function (e) {
            e.preventDefault();

            var form = $('#FrmQuest2');

            var _pasa;
            if ($dt2_Resultado.text().toLowerCase() == "pasa") {
                _pasa = true;
            } else { _pasa = false; } 

            var datos = {
                estudioId: $('#estudio_id').val(),
                quest1: ($("#dt2_quest_1_option1").parent().hasClass("Activo")) ? true : ($("#dt2_quest_1_option3").parent().hasClass("Activo")) ? false : null,
                quest2: ($("#dt2_quest_2_option1").parent().hasClass("Activo")) ? true : ($("#dt2_quest_2_option3").parent().hasClass("Activo")) ? false : null,
                quest3: ($("#dt2_quest_3_option1").parent().hasClass("Activo")) ? true : ($("#dt2_quest_3_option3").parent().hasClass("Activo")) ? false : null,
                //quest1: $dt2_quest1.is(':checked'),
                //quest2: $dt2_quest2.is(':checked'),
                //quest3: $dt2_quest3.is(':checked'),
                quest4: $dt2_quest4.val(),
                pasa: _pasa
            };


            $.ajax({
                url: form.attr("action"),
                method: form.attr("method"),
                data: datos,
                success: function () { location.reload(true); }
            });
        });



    });


</script>